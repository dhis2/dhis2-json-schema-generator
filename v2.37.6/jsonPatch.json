            "op" : {
              "const" : "add"
            }
          },
          "required" : [ "op" ]
        }, {
          "$ref" : "removeOperation.json",
          "type" : "object",
          "properties" : {
            "op" : {
              "const" : "remove"
            }
          },
          "required" : [ "op" ]
        }, {
          "$ref" : "replaceOperation.json",
          "type" : "object",
          "properties" : {
            "op" : {
              "const" : "replace"
            }
          },
          "required" : [ "op" ]
        } ]
      }
    }
  }
}